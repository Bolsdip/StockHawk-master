
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.sam_chordas.android.stockhawk.ui.EmptyRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textview_stock_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@+id/empty_stock_list"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/material_blue_700"
        android:gravity="center_horizontal" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24dp"
        tools:fab_colorNormal="@color/material_blue_500"
        tools:fab_colorPressed="@color/material_blue_600"
        tools:fab_colorRipple="@color/ripple"
        tools:fab_shadow="true"
        tools:fab_type="normal"
        tools:layout_anchor="recycler_view"
        tools:layout_anchorGravity="bottom | end"
        />

</LinearLayout>
